{
    "m2-copy-xml": {
        "scope": "xml",
        "prefix": "m2-copy-xml",
        "body": [
            "<!--",
            "/*",
            " Copyright Â© Hibrido. All rights reserved.",
            "* https://www.hibrido.com.br/",
            "*/",
            "-->"
        ],
        "description": "Copyright for Devs"
    },
    "m2-move": {
        "scope": "xml",
        "prefix": "m2-move",
        "body": [
            "<move element="$1" destination="" before="-" />"
        ],
        "description": "Magento 2 move block xml"
    },
    "m2-remove": {
        "scope": "xml",
        "prefix": "m2-remove",
        "body": [
            "<referenceBlock name="$1" remove="true" />"
        ],
        "description": "Magento 2 remove block xml"
    },
    "m2-create-block": {
        "scope": "xml",
        "prefix": "m2-create-block",
        "body": [
            "<block class="Magento\Framework\View\Element\Template" name="$1" template="Magento_Customer: :name.phtml" />"
        ],
        "description": "Magento 2 create block xml"
    }
}